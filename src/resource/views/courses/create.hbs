<div class="mt-4">  
    <h2 class="text-center">Tạo mới khóa học</h2>

    <form method="POST" action="/course/store">
        <div class="form-group">
            <label>Tên khóa học</label>
            <input type="text" class="form-control" placeholder="Nhập tên khóa học" name="name">
        </div>
        <div class="form-group">
            <label>Mô tả</label>
            <input type="text" class="form-control" placeholder="Nhập mô tả" name="description">
        </div>
        <div class="form-group">
            <label>Video ID</label>
            <input type="text" class="form-control" placeholder="Nhập Id image" name="videoId">
        </div>
       
        <button type="submit" class="btn btn-primary">Tạo khóa học</button>
    </form>
</div>